{
  "Version": "1",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ots:ListTable",
        "ots:DescribeTable",
        "ots:GetRow",
        "ots:PutRow",
        "ots:UpdateRow",
        "ots:DeleteRow",
        "ots:GetRange"
      ],
      "Resource": [
        "acs:ots:*:*:instance/${BookTableStoreInstance}",
        "acs:ots:*:*:instance/${BookTableStoreInstance}/table/*"
      ]
    }
  ]
}